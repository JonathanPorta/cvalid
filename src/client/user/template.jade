.container(ng:controller='user')
	.row(ng:show="step < 4")
		.col-md-12
			.jumbotron
				h1 Activate Your Membership
				form(ng:submit='next()', ng:show="step >= 0")
					label(for="card-number", ng:show="step != 0")
						{{card}}
					input(type='text', id="card-number", name="card-number", placeholder="Enter your Card Number", ng:model="card", ng:show="step == 0", required)

				form(ng:submit='next()', ng:show="step >= 1")
					label(for="card-pin", ng:show="step != 1")
						{{pin}}
					input(type='text', id="card-pin", name="card-pin", placeholder="Enter the PIN", ng:model="pin", ng:show="step == 1", required)

				form(ng:submit='next()', ng:show="step >= 2")
					label(for="full-name", ng:show="step != 2")
						{{full-name}}
					input(type='text', id="full-name", name="full-name", placeholder="Your Name", ng:model="name", ng:show="step == 2", required)

				form(ng:submit='next()', ng:show="step >= 3")
					label(for="email", ng:show="step != 3")
						{{email}}
					input(type='text', id="email", name="email", placeholder="Your Email", ng:model="email", ng:show="step == 3", required)
	.row(ng:show="step >= 4")
		.col-md-2
			ul
				li vendors
				li vendors
				li vendors
				li vendors
				li vendors
				li vendorsv
				li vendors
				li vendors
				li vendors
		.col-md-10
			.jumbotron
				h1 Vendors

